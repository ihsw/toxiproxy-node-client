{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
      "strictNullChecks": true,
      "sourceMap": false,
        "removeComments": false,
        "declaration": true,
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "filesGlob": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./example-code",
        "./node_modules"
    ]
  }
  